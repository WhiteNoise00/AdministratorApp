@model AdministratorApp.Models.Client
@{
    ViewData["Title"] = "ClientDelete";
}
<div>
    <dl class="dl-horizontal">
        <dt>Client to be removed:</dt>
        <dd>
            @Html.DisplayFor(model => model.Client_Name)
        </dd>
    </dl>
</div>
<div>
    <form asp-controller="Client" asp-action="DeleteClient" method="post">
        <div class="form-group">
            <input type="submit" class="btn btn-outline-dark" value="Delete" />
        </div>
    </form>
</div>