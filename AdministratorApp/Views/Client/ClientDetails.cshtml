@model AdministratorApp.Models.Client
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Client:</th>
            <th>Contact person:</th>
            <th>Contact phone number:</th>
            <th>E-mail:</th>
            <th>List of services:</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Client_Name</td>
            <td>@Model.Client_Contact_Person</td>
            <td>@Model.Client_Contact_Phone</td>
            <td>@Model.Client_Contact_Email</td>
            <td>
                <ul>
                    @foreach (var i in Model.ServicesForClients)
                    {
                        <li>@i.Service.Service_Name</li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>